<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <theme>
    <name></name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>
    <desktops>
      <popupTime>0</popupTime>
      <names>
        <name>1</name>
        <name>2</name>
        <name>3</name>
        <name>4</name>
      </names>
	  <prefix>" "</prefix>
    </desktops>
  <keyboard>
    <default />
    <!-- Use a different terminal emulator -->
    <keybind key="S-Print">
		<action name="Execute" command="~/.config/scripts/s_screenshoot.sh" />
    </keybind>
    <keybind key="Print">
		<action name="Execute" command="~/.config/scripts/screenshoot.sh" />
    </keybind>
	<!--
    <keybind key="W-v">
		<action name="Execute" command="cliphist list | rofi -dmenu -theme "~/.config/rofi/clipboard.rasi" | cliphist decode | wl-copy" />
		</keybind>
	-->
    <keybind key="W-r">
		<action name="Execute" command="dolphin" />
    </keybind>
    <keybind key="W-n">
		<action name="Execute" command="~/.config/scripts/rofi/powermenu1.sh" />
    </keybind>
    <keybind key="W-d">
		<action name="Execute" command="~/.config/scripts/rofi/launcher.sh" />
    </keybind>
    <keybind key="W-q">
      <action name="Execute" command="foot" />
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow" />
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow" />
    </keybind>
    <keybind key="W-c">
      <action name="Close" />
    </keybind>
    <keybind key="W-w">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-Left">
      <action name="SnapToEdge" direction="left" combine="yes" />
    </keybind>
    <keybind key="W-Right">
      <action name="SnapToEdge" direction="right" combine="yes" />
    </keybind>
    <keybind key="W-Up">
      <action name="SnapToEdge" direction="up" combine="yes" />
    </keybind>
    <keybind key="W-Down">
      <action name="SnapToEdge" direction="down" combine="yes" />
    </keybind>
    <keybind key="A-Space">
      <action name="ShowMenu" menu="client-menu" atCursor="no" />
    </keybind>
    <keybind key="W-h">
      <action name="Execute" command="pactl -- set-sink-volume 0 -10%" />
    </keybind>
    <keybind key="W-l">
      <action name="Execute" command="pactl -- set-sink-volume 0 +5%" />
    </keybind>
    <keybind key="XF86_AudioMute">
      <action name="Execute" command="amixer sset Master toggle" />
    </keybind>
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl set +10%" />
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 10%-" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>
